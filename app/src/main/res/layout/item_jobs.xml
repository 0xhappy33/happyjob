<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:baselineAligned="false">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:ignore="NestedWeights">
                    <ImageView
                        android:id="@+id/logoCompany"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/np_image"
                        android:layout_gravity="center_horizontal"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:weightSum="5">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="4">
                        <TextView
                            android:id="@+id/txtTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/title_job"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_weight="3"
                            android:textColor="@android:color/background_dark"
                            tools:ignore="SmallSp" />
                        <TextView
                            android:id="@+id/txtType"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/furama_resort"
                            android:textSize="10sp"
                            android:layout_weight="1"
                            android:gravity="center"
                            tools:ignore="SmallSp"
                            android:textColor="@android:color/white"
                            android:background="@color/colorButtonTypeJob"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txtCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Company"
                        android:textStyle="italic"
                        android:gravity="left|center"
                        android:textColor="@android:color/background_dark"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />
                    <TextView
                        android:id="@+id/descriptionCompany"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textColor="@android:color/background_dark"
                        android:text="Description"
                        android:textSize="11sp"
                        android:layout_weight="3"
                        tools:ignore="SmallSp" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="url"
                    android:drawableLeft="@drawable/ic_location"
                    android:textColor="@android:color/background_dark"
                    android:id="@+id/txtLocation"
                    android:textSize="10sp"
                    android:gravity="left|center"
                    android:layout_weight="1"
                    tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,SmallSp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="url"
                    android:textColor="@android:color/background_dark"
                    android:textSize="10sp"
                    android:id="@+id/urlCompany"
                    android:gravity="center"
                    android:layout_weight="1"
                    tools:ignore="SmallSp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="12/1/2017"
                    android:textSize="10sp"
                    android:textColor="@android:color/background_dark"
                    android:id="@+id/txtCreateAt"
                    android:gravity="right|center"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>